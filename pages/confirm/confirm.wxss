.productlist{
}

.product{
  height: 200rpx;
  font-size: 33rpx;
}

.product > image {
  float:left;
  width:200rpx;
  height:200rpx;
}

.product > view {
  float:left;
  width:510rpx;
}

.price{
  font-size: 42rpx;
   color: #e93b3d;
}

.field{
  background:white;
  border-top: 1px solid #e1e1e1;
  border-bottom: 1px solid #e1e1e1;
  margin-bottom: 20rpx;
  padding: 20rpx;
}

.btn_shipping
{
  background-color:#3884ff;
  margin-bottom: 10rpx;
}
.btn_wxpay{
 background: #1aad19;
}
.btn_wxpay,.btn_shipping{
  text-align: center;
  color: white;
  padding: 20rpx;
  border-radius: 10rpx;
}

.label{
  float:left;
}

.value{
  float:right;
  color: #e93b3d;
}


.good_price,.shipping_fee,.sum_fee{
  margin-bottom: 10rpx;
  height:62rpx;
}

.counter{
  float: right;
  font-size: 33rpx;
}

.counter > view{
  float:left;
  background-color: #e9e9e9;
  color: #333;
  padding:10px 15px;
}
.counter > view:nth-child(2){
  margin: 0 2px;
  width:35rpx;
  text-align: center;
}

.disabled{
  background-color:#f7f7f7;
}